{
    "name": "samwilson/mediawiki-feeds",
    "description": "A tool to generate RSS feeds for pages in MediaWiki categories.",
    "type": "project",
    "keywords": ["MediaWiki", "RSS", "feeds", "syndication"],
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Sam Wilson",
            "email": "sam@samwilson.id.au"
        }
    ],
    "autoload": {
        "psr-4": {
            "Samwilson\\MediaWikiFeeds\\": "src/"
        }
    },
    "require": {
        "slim/slim": "^3.8",
        "slim/twig-view": "^2.2",
        "twig/twig": "^1.18",
        "addwiki/mediawiki-api": "^0.7",
        "addwiki/mediawiki-datamodel": "^0.7",
        "suin/php-rss-writer": "^1.5",
        "diversen/parse-argv": "^1.0",
        "symfony/dom-crawler": "^3.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0"
    },
    "scripts": {
        "mkconfig": [
            "php -r \"file_exists('config.php') || copy('config.dist.php', 'config.php');\""
        ],
        "post-install-cmd": [
            "composer mkconfig"
        ],
        "post-update-cmd": [
            "composer mkconfig"
        ]
    }
}
